@model Campeonato.Domain.Entities.Departure

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes de @Model.Partida</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Partida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Partida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teams)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var team in Model.Teams)
                {
                    <li>@team.Nome</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Voltar a lista</a>
</div>

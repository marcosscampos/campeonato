@model IEnumerable<Campeonato.Domain.Entities.Departure>

@{
    ViewData["Title"] = "Partidas";
}

<h1>Partidas</h1>

<p>
    <a asp-action="Create">Criar nova partida</a>
</p>
<table class="table table-hover">
    <caption>Lista de partidas</caption>
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Partida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partida)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
                @Html.ActionLink("Deletar", "Remove", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
